<p>
  
  <%= link_to "Create an account", "/auth/identity/register" %> or login below.
</p>
  
<%= form_tag "/auth/identity/callback", :html => {:class => "form-inline"} do %>
 
    <%= label_tag :auth_key, "Email" %>
    <%= text_field_tag :auth_key %>
 
  
    <%= label_tag :password %>
    <%= password_field_tag :password %>
	<div>"Remember me on this computer?"
	<%= check_box_tag :remember, 1, true %> <br/> <br/>
  
  <div class="actions"><%= submit_tag "Login" %></div>
<% end %>