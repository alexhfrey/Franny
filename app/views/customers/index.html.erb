<h1>Franny's Customers</h1>
<div>Click on a customer name to see edit their details</div>
<table class = "table table-striped table-bordered table-condensed">
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Address</th>
    <th>Delivery route</th>
	<th>Balance</th>
  
   
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= link_to customer.name, edit_customer_path(customer) %></td>
    <td><%= customer.email %></td>
    <td><%= customer.phone %></td>
    <td><%= customer.address %></td>
    <td><%= customer.delivery_route %></td>
	<td><%= customer.balance %></td>
   
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

