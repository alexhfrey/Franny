<%= simple_form_for(@customer, :url => '/auth/identity/register') do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

 
    <%= f.input :name, :input_html => {:name => 'name'} %>

    <%= f.input :email, :input_html => {:name => 'email'} %>

    <%= f.input :phone, :input_html => {:name => 'phone'} %>

    <%= f.input :address, :input_html =>{:rows => 2, :name => 'address'} %>
	
	<%= f.input :password, :as => 'password', :input_html => {:name => 'password'} %>
	
	<%= f.input :password_confirmation, :as => 'password', :input_html => {:name => 'password_confirmation'} %>
	
	<%= f.input :remember, :label => "Remember me on this computer?" %> <br/> <br/>

    <%= f.submit %>

<% end %>