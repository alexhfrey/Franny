<%= simple_form_for :order, :url => update_multiple_orders_path, :html => { :method => :put}  do |f|%>
<h1>Listing orders</h1>

<table class = "table table-striped table-bordered table-condensed">
  <tr>
	<th>Date</th>
    <th>Name</th>
    <th>Email</th>
	<th>Phone</th>
	<th>Address</th>
    <th>Monday orders</th>
    <th>Tuesday orders</th>
    <th>Wednesday orders</th>
    <th>Thursday orders</th>
	<% if defined? @extras %>
		<%= @extras .each do |o| %>
			<th><%= o.name %></th>
		<% end %>
	<% else %>
		<th>Extras </th>
	<% end %>
	<th>Instructions</th>
	<th>Due</th>
	<th>Paid</th>
    <th></th>
    <th></th>
    <th></th>
   
   
  </tr>

<% @orders.each do |order| %>
 <%= simple_fields_for "order[]", order do |ff| %>
  <tr>
	<td><%= order.week.start_date %></td>
    <td><%= order.name %></td>
	<td><%= order.email %></td>
    <td><%= order.phone %></td>
	<td><%= order.address %></td>
    <td><%= order.monday_orders %></td>
    <td><%= order.tuesday_orders %></td>
    <td><%= order.wednesday_orders %></td>
    <td><%= order.thursday_orders %></td>
	<% if defined? @extras %>
	<%= @extras .each do |o| %>
		<td><%= order.extras(o.id) %></td>
		<% end %>
	<% else %>
	<td><%= order.extras_in_words %> </td>
	
	<% end %>
	
	<td><%= order.instructions %> </td>
	<td><%= order.amount %></td>
	<td><%= ff.input_field :paid %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
 <% end %>

</table>
<%= f.submit %>
<% end %>
<br />
<% if defined? (@week) %>	
	<%= link_to 'Export', week_orders_path(@week, :format=>:csv) %>
<% else %>
	<%= link_to 'Export', orders_path(:format => :csv) %>
<% end %>
<%= link_to 'New Order', new_order_path %>
